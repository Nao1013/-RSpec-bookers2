<div class="container">
    <div class="row">
        <div class="col-3">
      
      <h2 class="mt-3">User info</h2>
  <table>
    <thead>
      <tr>
        <th><%= image_tag @user.get_profile_image(100, 100) %>
        </th>
      </tr>
    </thead>
   <tbody>
    <tr>
      <th scope="row">name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th scope="row">introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
   </tbody>
 </table>
 <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-bg btn-block mt-5" do %>
  <i class="fas fa-user-cog"></i>
 <% end %>
    
    <%= render 'books/bookslists', book_new: @book_new %>
    
    <div class="col-1"> </div>
    <div class="col-6 mt-4">
        <h2>Users</h2>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>