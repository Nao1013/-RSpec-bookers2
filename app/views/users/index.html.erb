<div class="cotainer">
    <div class="row">
      <h2 class="mt-3">User info</h2>
  <table>
    <thead>
      <tr>
        <th><%= image_tag @user.get_profile_image %>
        <%= image_tag 'no_image.jpg' %>
        </th>
      </tr>
    </thead>
   <tbody>
    <tr>
      <th scope="row">name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th scope="row">introduction</th>
      <td><%= user.introduction %></td>
    </tr>
   </tbody>
 </table>
 <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-bg btn-block mt-5" do %>
  <i class="fas fa-user-cog"></i>
 <% end %>
    
    <%= render 'books/bookslists', book: @book %>
    
    <div class="col-8">
<table>
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.profile_image %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(@user.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>