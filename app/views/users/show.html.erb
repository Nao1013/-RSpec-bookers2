
<div class="container">
  <div class="col-4">
  <h1 class="mt-3">User info</h1>
  <table>
    <thead>
      <tr>
        <th><%= image_tag @user.get_profile_image(100, 100) %></th>
      </tr>
    </thead>
   <tbody>
    <tr>
      <th scope="row">name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th scope="row">introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
   </tbody>
 </table>

<h1>New book</h1>

  <%= form_with model: @book do |f| %>
      
    <h4>Title</h4>
      <%= f.text_field :title %>
      
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    
    <%= f.submit "Create Book", class: "btn btn-success btn-sm mt-3" %>
  
  <% end %>
    </div>
  </div>