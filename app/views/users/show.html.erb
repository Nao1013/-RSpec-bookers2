
<div class="container">
  <div class="col-4">
  <h1 class="mt-3">User info</h1>
  <table>
    <thead>
      <tr>
        <th><%= image_tag @user.get_profile_image(100, 100) %></th>
      </tr>
    </thead>
   <tbody>
    <tr>
      <th scope="row">name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th scope="row">introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
   </tbody>
 </table>
 <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-bg btn-block mt-5" do %>
  <i class="fas fa-user-cog"></i>
 <% end %>

<div class="row no-gutters">
    <div class="col-md-5">
      <h5 class="text-dark bg-light p-4 mb-0">New book</h5>
      <div class="form-body p-4">
        <% if @book.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @book.errors.count %>件のエラーが発生しました
            </h6>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        
        <%= form_with model: @post_image do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <p>Title</p>
            <%= f.text_field :shop_name, class:"form-control" %>
          </div>
          <p>Opinion</p>
          <%= f.text_area :caption, class:"form-control", rows:"3" %>
          <hr>
          <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-success mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
    </div>
  </div>