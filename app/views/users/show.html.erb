<div class="container">
  <div class="row">
  <div class="col-4 sticky-top">
   <h2 class="mt-3">User info</h2>
  <table>
    <thead>
      <tr>
        <th><%= image_tag @user.get_profile_image(100, 100) %></th>
      </tr>
    </thead>
   <tbody>
    <tr>
      <th scope="row">name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th scope="row">introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
   </tbody>
 </table>
 <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-bg btn-block mt-5" do %>
  <i class="fas fa-user-cog"></i>
 <% end %>


      <h2 class="mt-5">New book</h2>
        <%= form_with model: @book do |f| %>
            <p>Title</p>
            <%= f.text_field :title, class:"form-control" %>
          <p>Opinion</p>
          <%= f.text_area :body, class:"form-control", rows:"3" %>
          <%= f.submit 'Create Book', class:"btn btn-success mt-4" %>
        <% end %>
      </div>

     <div class="col-8 mt-3">
        <h2>Books</h2>
        <tacle class="table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Title</th>
              <th scope="col">Opinion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th></th>
            </tr>
          </tbody>
        </tacle>
      </div>
     </div>
    </div>
  </div>