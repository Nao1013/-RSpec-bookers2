<div class="container mt-2">
  
 <% if @user.errors.any? %>
  <h3 class="mt-3"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    
<div class="mx-auto col-5">
    <h2>User info</h2>
    <%= form_with model: @user do |f| %>
    <div class="form-group">
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName",  class: "form-control" %>
  </div>
  <div class="form-group">
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "ファイル選択", accept: "image/*" %>
  </div>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction, size: 100, autofocus: true, id:"inputIntroduction", type: "text", class: "form-control" %><br>
  <%= f.submit "Update User", class:"btn btn-secondary" %>
<% end %>

</div>
</div>
