<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
         <%= link_to "Bookers", root_path, class:"text-white" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
           <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
           <% if user_signed_in? %>
           <ul class="list-unstyled nav justify-content-end">
             <li class="nav-item">
              <%= link_to user_path(current_user.id), class:"text-white nav-link" do %>
              <i class="fas fa-home"></i><span>Home</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class:"text-white nav-link" do %>
              <i class="fas fa-users"></i><span>Users</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path, class:"text-white nav-link" do %>
              <i class="fas fa-book-open"></i><span>Books</span>
              <% end %>
            </li>
      　　  　<li class="nav-item">
              <%= link_to destroy_user_session_path, class:"text-white nav-link", method: :delete do %>
              <i class="fas fa-sign-out-alt"></i><span>Log out</span>
              <% end %>
            </li>
          <% else %>
            　<li class="nav-item">
              <%= link_to root_path, class:"text-white nav-link" do %>
              <i class="fas fa-home"></i><span>Home</span>
              <% end %>
            <li class="nav-item">
              <%= link_to about_path, class:"text-white nav-link" do %>
                <span><i class="fas fa-link"></i>About</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class:"text-white nav-link" do %>
              <span><i class="fas fa-user-plus"></i>Sign up</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class:"text-white nav-link" do %>
              <span><i class="fas fa-sign-in-alt"></i>Log in</span>
              <% end %>
            </li>
          </ul>
          <% end %>
          </div>
      </div>
    </header>
          
  <main>
   <% if flash[:notice] %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
    <%= yield %>
    </main>
    
    <footer>
      <div class="container mt-5">
        <div class="text-center">
         <p>CopyRight Infratop.inc</p>
       </div>
      </div>
    </footer>
</html>
  
  </body>
  
  
