<div class="container mt-2">
     
 <% if @book.errors.any? %>
  <h3 class="mt-3"><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="mx-auto col-5">
    <h2>Editing Book</h2>
    <%= form_with model: @book do |f| %>
    <div class="form-group">
  <label for="inputName">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle",  class: "form-control" %>
  </div>
  <div class="form-group">
  <label for="inputBody">Opinion</label><br>
  <%= f.text_area :body, size: 100, autofocus: true, id:"inputBody", type: "text", class: "form-control" %><br>
 </div>
  <%= f.submit "Update Book", class:"btn btn-secondary" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>
</div>
</div>