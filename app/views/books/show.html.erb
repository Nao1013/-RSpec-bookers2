<div class="container">
  
<% if @book.errors.any? %>
  <h3 class="mt-3"><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
  <div class="row">
      <div class="col-4">
    <%= render 'users/user_list', user: @user %>
    
    <%= render 'bookslists', book_new: @book_new %>
    
     <div class="col-8 mt-3">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100, 100) %>
              <br>
              <%= link_to @book.user.name, user_path(@book.user_id) %>
              </td>
              <td><%= link_to @book.title, book_path(current_user) %></td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(current_user), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Delete", book_path(current_user), class: "btn btn-danger btn-sm", method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
          </tbody>
        </table>
      </div>
     </div>
</div>
</div>