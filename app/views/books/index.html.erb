<div class="container px-5 px-sm-0">
  
   <div class="row">
      <div class="col-md-3">
        <%= render 'bookerror', book_new: @book_new %>
         
    <%= render 'users/user_list', user: @user %>
    
    <%= render 'bookslists', book_new: @book_new %>
  
  <div class="col-md-8 offset-md-1 my-3">
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user.id) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
