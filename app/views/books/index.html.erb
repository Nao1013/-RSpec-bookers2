<div class="container">
  
   <div class="row">
      <div class="col-4">
    <%= render 'users/user_list', user: @user %>
    
    <%= render 'bookslists', book_new: @book_new %>
  
  <div class="col-8 my-3">
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
